  <form action="/api/users/register" method="post" class="form">
    <div class="form-group">
    <p class="display-6">Registro de Usuario</p>
    Nombre: <input type="text" name="first_name" class="form-control" required> <br>
    Apellido: <input type="text" name="last_name"  class="form-control"required> <br>
    Edad: <input type="number" name="age" class="form-control" required> <br>
    Email: <input type="text" name="email"  class="form-control"required> <br>
    Password: <input type="password" name="password"  class="form-control"required> <br>
    </div>
    <input type="submit" value="Registrarse" class="btn btn-primary">    


</form>
<br>
{{#if error}}
<i style="color: red;">{{error}}</i>
{{/if}}
