<form action="/api/users/login" method="post" class="form">
    <div class="form-group">
    <p class="display-6">Login</p>
    Email: <input type="text" name="email" class="form-control"> <br>
    Password: <input type="password" name="password" class="form-control"> <br>
    <br>
    </div>
    <input type="submit" value="Ingresar" class="btn btn-primary">
    <br>
</form>
<br>
<h6><i><a href="/views/reminder">Olvidé mi contraseña</a></i></h6>
{{#if message}}
<i style="color: blue;">{{message}}</i>
{{/if}}
{{#if error}}
<i style="color: red;">{{error}}</i>
{{/if}}
<button><a href="/api/users/login-github">Iniciar sesión con GitHub <img src="https://cdn-icons-png.flaticon.com/512/25/25231.png" width="30"></a></button>
<br>
<br>
<h5><i>¿No tienes usuario? <a href="/views/register">Regístrate</a></i></h5>







